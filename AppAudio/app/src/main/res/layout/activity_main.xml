<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="Estado"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/Grabar"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/estado"
        android:layout_alignParentStart="true"
        android:layout_marginTop="154dp"
        android:background="@drawable/rec"
        android:onClick="grabar" />

    <Button
        android:id="@+id/Parar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Grabar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-59dp"
        android:background="@drawable/stop"
        android:onClick="detener" />

    <Button
        android:id="@+id/Reproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Parar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-57dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/play"
        android:onClick="reproducir" />

</RelativeLayout>