<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ec.edu.uce.vista">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_editar_vehiculo"
            android:label="@string/title_activity_editar_vehiculo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_agregar_vehiculo"
            android:label="@string/title_activity_agregar_vehiculo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_listado_vehiculo"
            android:label="@string/title_activity_listado_vehiculo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_registro_usuario"
            android:label="@string/title_activity_registro_usuario"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>