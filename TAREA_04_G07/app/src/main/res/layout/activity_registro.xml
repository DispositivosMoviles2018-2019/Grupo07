<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:text="Registro"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txt_usuario_registro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:hint="Usuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txt_clave"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:hint="Clave"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txt_nombre_registro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:hint="Nombre"
                android:inputType="textCapWords"/>

            <EditText
                android:id="@+id/txt_apellido"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:hint="Apellido"
                android:inputType="textCapWords"/>
            <EditText
                android:id="@+id/txt_email_registro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txt_celular_registro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:hint="Celular"
                android:inputType="number|phone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="100dp">
                <Button
                    android:id="@+id/btn_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_camara"
                    android:text="Camara"
                    android:onClick="tomarFoto"
                    />
                <ImageView
                    android:id="@+id/imag_view_foto"
                    android:layout_width="140dp"
                    android:layout_height="191dp"
                    android:layout_gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">
                <TextView
                    android:id="@+id/txt_genero_registro"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Género"
                    android:textSize="18sp" />
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_masculino"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Masculino" />

                    <RadioButton
                        android:id="@+id/rb_femenino"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Femenino" />
                </RadioGroup>
            </LinearLayout>


            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:hint="Fecha de Nacimiento"
                android:inputType="text"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/txt_asignaturas_registro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:hint="----------------Asignaturas-----------------"
                    android:inputType="text"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBoxMineria"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:hint="Minería" />

                <CheckBox
                    android:id="@+id/checkBoxDistribuida"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:hint="Programacion Distribuida" />

                <CheckBox
                    android:id="@+id/checkBoxGestion"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:hint="Gestión" />

                <CheckBox
                    android:id="@+id/checkBoxSimulacion"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:hint="Simulación" />

                <CheckBox
                    android:id="@+id/checkBoxOptativaIII"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:hint="Optativa III" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:hint="Beca: "
                    android:textSize="18sp"/>

                <Switch
                    android:id="@+id/switchBeca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_btn"
                android:text="Registrar"
                android:onClick="guardar"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>